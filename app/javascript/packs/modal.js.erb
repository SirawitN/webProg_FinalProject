$(document).on('turbolinks:load', function() { 
  $(".productDetails").click(function() {
    const id = $(this).attr("data-p-id")
    const name = $(this).attr("data-p-name")
    const store_name = $(this).attr("data-p-store-name")
    const store_id = $(this).attr("data-p-store-id")
    const stock = $(this).attr('data-p-quan')
    const descp = $(this).attr("data-p-desc")

    $("#modal_store_name").empty();
    $("#modal_store_name").append(`<p class='lead fs-3'>${store_name}<p>`);

    $("#modal_item_name").text(`${name}  (stock : ${stock})`);

    $("#modal_item_desc").text(`${descp}`);

    $("#modal_store_link").empty();
    $("#modal_store_link").append(`<a class="btn btn-orange_2" href="/stores/${store_id}" style='color: white;'>SHOP</a>`);

    $('#cart_item_product_id').attr('value', `${id}`)
    $('#cart_item_quantity').attr('max', `${stock}`)

    $(".productModal").show();
  });
});
  