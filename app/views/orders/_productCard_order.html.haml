- p = product

.col-12.col-md-6.col-lg-12.mb-3{id: "#{tag}-#{p.store.username}-#{p.name}"}
	.card
		.row.g-0
			.col-5
				.card-img-fluid.rounded-start= image_tag p.thumb rescue 'No images to display !!'
			.col-7
				.card-body
					%h5.card-title= p.store.username
					%h6.card-subtitle.mb-2.text-muted= p.name
					%p.card-text
					.card-text= "#{unit_sold_price} Baht."
					%small.text-muted= "quantity : #{quantity}"


