- p = product

.col-12.col-md-6.col-lg-12.mb-3{id: "#{tag}-#{p.store.username}-#{p.name}"}
	.card
		.row.g-0
			.col-5
				.card-img-fluid.rounded-start= image_tag p.thumb rescue 'No images to display !!'
			.col-7
				.card-body
					%h5.card-title= p.store.username
					%h6.card-subtitle.mb-2.text-muted= p.name
					%p.card-text
					.card-text= "#{p.price} Baht."
					%small.text-muted= "quantity #{cart_item.quantity}"
					= button_to "Delete from cart", cart_item_path(cart_item), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"


