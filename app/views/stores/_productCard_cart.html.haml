- p = product

.col-12.col-md-6.col-lg-12.mb-3{id: "#{tag}-#{p.store.username}-#{p.name}"}
	.card
		.row.g-0
			.col-5
				.card-img-fluid.rounded-start.text-center
					= image_tag p.thumb rescue 'No images to display !!'
			.col-7
				.card-body
					.row
						.col
							.card-title.lead.fs-3= p.store.username
							.card-subtitle.lead.fs-6.mb-2.text-muted= p.name
							.card-text.lead.fs-5= "#{p.price} Baht."
							%small.text-muted= "quantity #{cart_item.quantity}"
						.col.d-flex.justify-content-end
							= button_to "Delete from cart", cart_item_path(cart_item), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger rounded-pill"


