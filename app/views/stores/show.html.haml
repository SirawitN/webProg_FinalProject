%p#notice= notice

.container
  .row
    .col-4
      %p
        %b Username:
        = @store.username
      %p
        %b Email:
        = @store.email
      %p
        %b Address:
        = @store.address
      %p
        %b Subdistrict:
        = @store.subDistrict
      
    .col-4
      %p
        %b District:
        = @store.district
      %p
        %b Province:
        = @store.province
      %p
        %b Zipcode:
        = @store.zipcode
      %p
        %b Totalratingscore:
        = @store.totalRatingScore
      %p
        %b Ratecount:
        = @store.rateCount
    .col-4
      - if session[:store_id]
        = button_to 'Add new products', new_product_path, method: :get, class: "btn btn-warning"

        = link_to 'Edit', edit_store_path(@store)
        = link_to 'Back', stores_path

      - if !!session[:store_id]
        = button_to "Logout", logout_url, method: :get, class: "btn btn-danger"
      - elsif @current_user.stores.include?(@store)
        = button_to "Unfollow", unfollow_path(@store), method: :delete, class: "btn btn-info"
      - else
        = button_to "Follow", follow_path(@store), method: :post, class: "btn btn-info"

  .row
    .col-6
      = "ITEM LIST"
      - @store.show_products.each do |tag, items|
        - if items.size == 0
          - next
        .row.mb-2{id: "#{tag}Row"}
          %h5= tag
          - items.each do |p|
            = render 'productCard', product: p, tag: tag

= render 'productModal'