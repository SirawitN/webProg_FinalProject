-# frozen_string_literal: true
= simple_form_for(@user) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs.d-grid.gap-2
    = f.input :username
    = f.input :password, label: 'Password : minimum length is 6'
    = f.input :password_confirmation
    = f.input :email
    = f.input :name
    = f.input :address
    = f.input :subDistrict
    = f.input :district
    = f.input :province
    = f.input :zipcode
    = f.input :phoneNumber, placeholder: 'xxx-xxx-xxxx'
    = f.input :gender, priority: ["Male"], collection: ["Male", "Female", "Others"]
    = f.input :birthdate, start_year: Date.today.year - 90, end_year: Date.today.year, order: [:day, :month, :year]

  .form-actions.mt-4
    = f.button :submit, class: "btn btn-success"
