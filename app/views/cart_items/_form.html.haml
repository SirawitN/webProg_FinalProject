-# frozen_string_literal: true
= simple_form_for(@cart_item) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs.mb-4
    = f.input :product_id, as: 'hidden', id: 'cart_item_product_id'

    .form-label.lead Quantity
    = f.input :quantity, input_html: {value: 1, min: 1, max: 99}, label: false, class: 'form-control'

  .form-actions
    .row
      = f.button :submit, 'Confirm', class: 'btn btn-orange_2 text-white'
