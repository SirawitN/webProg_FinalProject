-# frozen_string_literal: true
= simple_form_for(@product) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs.d-grid.gap-2
    = f.input :name
    = f.input :price, input_html: { min: '0', max: '999999', step: '0.5' }
    = f.input :quantity, input_html: { min: '0', max: '9999', step: '1' }
    = f.input :description
    = f.input :tag_list, label: 'Tags (seperated by ",")'
    = f.input :picture

  .form-actions.mt-3
    = f.button :submit, class: "btn btn-success"
    - if @product.id
      = link_to 'Delete this product', product_path(@product), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"
    = link_to "Cancel", store_path(session[:store_id]), class: "btn btn-secondary", role: "button", "aria-disabled": "true", style: "color: white;"
