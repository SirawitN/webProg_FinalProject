-# frozen_string_literal: true
= simple_form_for(@order_item) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.association :order
    = f.input :product_id
    = f.input :quantity
    = f.input :unit_sold_price

  .form-actions
    = f.button :submit
