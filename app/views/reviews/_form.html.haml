-# frozen_string_literal: true
= simple_form_for(@review) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs.mb-3

    = f.input :user_id, as: 'hidden', readonly: true
    = f.input :store_id, as: 'hidden', readonly: true
    .form-label.lead Score
    = f.input :score, input_html: {value: 1, min: 1, max: 5}, label: false, class: 'form-control'
    .form-label.lead Comment
    = f.input :comment, label: false, class: 'form-control'

  .form-actions
    .row
      = f.button :submit, 'Confirm', class: 'btn btn-orange_2 text-white'
